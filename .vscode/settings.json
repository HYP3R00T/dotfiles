{
    "shellcheck.enable": true,
    "shellcheck.enableQuickFix": true,
    "shellcheck.run": "onType",
    "[shellscript]": {
        "editor.defaultFormatter": "mkhl.shfmt"
    },
    "shellcheck.ignorePatterns": {
        "**/.shellcheckrc": true
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },
    "hide-files.files": []
}